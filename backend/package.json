{
  "name": "backend",
  "type": "module",
  "version": "1.0.0",
  "description": "Express server for codenames app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "dev:dbTypes": "npx kysely-codegen --out-file ./src/common/db/db.types.ts"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "author": "Henry Brown",
  "license": "ISC",
  "dependencies": {
    "@codenames/shared": "*",
    "body-parser": "^1.19.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "error-stack-parser": "^2.1.4",
    "express": "^4.21.1",
    "express-jwt": "^8.5.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "mongoose": "^8.7.2",
    "nodemon": "^3.1.7",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "shortid": "^2.2.16",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/pg": "^8.11.11",
    "@types/shortid": "^2.2.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "rimraf": "^5.0.0",
    "tsx": "^4.19.2"
  }
}
