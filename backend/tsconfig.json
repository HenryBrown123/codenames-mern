{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@backend/features/*": ["src/features/*"],
      "@backend/test/*": ["test/*"],
      "@backend/common/*": ["src/common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/zzz-legacy/**"],
  "references": [{ "path": "../shared" }]
}
